<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLog') %> 
   %> <% } else { %>
    <%- include('./partials/header') %> 
    <% } %>

    <main>
        <section class="centerMain-content">
            <h1>Registrate</h1>
            <form action="/usuario/registrar" method="POST" class="loginForm" enctype="multipart/form-data">
            <% if (locals.errores) { %>
              <p class="error"><%= errores.message %> </p>
              <p class="error"><%= errores.message5 %> </p>
            <% } %>
                <label class = "campo" for="name">Tu nombre:</label>
                <input class = "campo"type="text" required name="nombre" id="name" placeholder="Nombre">
        
                <label class = "campo" for="name">Tu apellido:</label>
                <input class = "campo" type="text" required name="apellido" id="apellido" placeholder="Apellido">
                
                <label class = "campo" for="name">Fecha de nacimiento</label>
                <input class = "campo" type="date" name="fecha_nacimiento" id="fecha" placeholder="Fecha de nacimiento" required>

                <label class = "campo" for="name">Tu nombre de usuario</label>
                <input class = "campo" type="text"required name="username" id="username" placeholder="username">
        
                <label class = "campo" for="email">Tu email:</label>
                <input class = "campo" type="email"required name="email" id="email" placeholder="example@email.com">
        
                <label class = "campo" for="email">Tu contraseña:</label>
                <input class = "campo" type="password"required name="contrasenia" id="password" placeholder="Contraseña">

                <label class = "campo" for="email">DNI:</label>
                <input class = "campo" type="number"required name="numero_documento" id="password" placeholder="DNI">

                <label class = "campo" for="email">Imagen de usuario</label>
                <input class = "campo" type="file" name="foto" id="imagenUrl" placeholder="" required>
        
                <button class = "campo" type="submit" class="loginButton">Registrame</button>
        
            </form>
        </section>
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>