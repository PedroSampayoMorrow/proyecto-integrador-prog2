<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <main>
                <div class="post-detail container">
                    <section class="center main-content post">
                        <div class="info-usuario">
                            <img class="profile" src="<%= posteo.usuario.foto %> " alt="">
                            <p><a href="/usuario/detalle/id/<%= posteo.id_usuario %> ">
                                    <%= posteo.usuario.usuario %>
                                </a></p>
                        </div>
                        <img class="photo" src="<%= posteo.imagen_url %> " alt="">
                        <div class="post-comentarios">
                            <h4 class="post-comentarios">Descripcion</h4>
                            <p class="titulo">
                                <%= posteo.descripcion %>
                            </p>
                        </div>

                    </section>
                    <section class="right">
                        <h4>Comentarios</h4>
                        <section class="comments">
                            <form action="" class="comment-form">
                                <input type="text" class="input" placeholder="Agregar comentario">
                                <button type="submit">Comentar</button>
                            </form>

                           
                            <div>
                                <% for( let i=0; i < posteo.comentarios.length; i++ ) { %>
                                    <article class="comment">
                                        <img src="<%= posteo.comentarios[i].usuario.foto %> " class="imgComentario" alt="">
                                        <section class="content">
                                            <a class="user" href="/usuario/detalle/id/<%= posteo.comentarios[i].usuario.id %> ">
                                                <%= posteo.comentarios[i].usuario.usuario %>
                                            </a>
                                            <span class="text">
                                                <%= posteo.comentarios[i].texto %>
                                            </span>
                                        </section>
                                    </article>
                                    <% } %> 
                        
                            </div>
                        </section>
                    </section>
                </div>
            </main>

            <%- include('./partials/footer') %>


    </body>

</html>