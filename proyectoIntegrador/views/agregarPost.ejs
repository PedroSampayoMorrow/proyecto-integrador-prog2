<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLog') %> 
   %> <% } else { %>
    <%- include('./partials/header') %> 
    <% } %>
    <main>
        <section class="centerMain-content">
            <h1>Nuevo Post</h1>
            <form action="/posteo/crear" method="POST" class="loginForm" enctype="multipart/form-data">
            
                <label class = "campo" for="name">Titulo:</label>
                <input class = "campo"type="text" name="titulo" id="name" placeholder="Ej: Russia">
        
                <label class = "campo" for="name">Descripcion:</label>
                <input class = "campo" type="text" name="descripcion" id="apellido" placeholder="Ej: El mejor lugar del planeta!">

                <label class = "campo" for="email">Imagen</label>
                <input class = "campo" type="file" name="foto" id="imagenUrl" placeholder="">
        
                <button class = "campo" type="submit" class="loginButton">Crear Posteo!</button>
        </section>
    </main>

    <%- include('./partials/footer') %> 


</body>

</html>